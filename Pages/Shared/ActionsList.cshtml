@using static WebFormBuilderService
@{
    ViewData["Title"] = "Home Page";
}



<div class="text-center">
 

    <div class="input-group mb-3">
      <div class="input-group-prepend">
        <span class="input-group-text" id="inputGroup-sizing-default">
            Поиск
        </span>
      </div>
      <input type="search" class="form-control" 
        aria-label="Default" aria-describedby="inputGroup-sizing-default">
    </div>

    
    
</div>

 
@inject WebApplicationDbContext appDb
<div class="d-flex flex-row flex-wrap">
    @if(appDb.GetActionForms().Count()==0)
    {
        <div class="alert alert-info">
            Нет внешних ссылок
        </div>
        <div class="card">
            <div class="card-header">
                
            </div>
            <div class="card-body">
            <h5 class="card-title"> Новая карточка</h5>
            <p class="card-text"> 
                Чтобы создать событие поступления средста на счёт 
                необходимо получить общедоступный адрес для постулени
            </p>
            <a href="# " class="btn btn-primary">Создать   </a>
            </div>
        </div>
    }else{
        @foreach( WebForm Form in appDb.GetActionForms()){
            <div class="card w-100 m-1" >
              <div class="card-header">
                
              </div>
              <div class="card-body">
                <h5 class="card-title">@Form.Name</h5>
                <div class="card-text">
                    <partial name="WebForm" model="Form" />
                </div>
                <a href="@Form.URL" class="btn btn-primary btn-sm"> Перейти </a>
              </div>
            </div>
        }
    }
    

</div>